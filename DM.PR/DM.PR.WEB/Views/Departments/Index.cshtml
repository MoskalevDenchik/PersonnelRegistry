
<table class="table table-hover table-bordered " style="background-color:white">
    <thead>
        <tr class="text-center">
            <td>Id</td>
            <td>Имя</td>
            <td>Адресс</td>
            <td>Описание</td>
        </tr>
    </thead>
    <tbody id="tableData" class="text-center text-info tableClick" style="font-size:small; margin-bottom:2px"></tbody>
</table>

<div class="row">
    <div class="col-md-3">
        <ul class="pagination" id="paged"></ul>
    </div>

    <div class="col-md-1">
        <select id="pageSize">
            <option value="value">5</option>
            <option value="value">10</option>
            <option value="value">15</option>
        </select>
    </div>
    <div class=" col-md-offset-3 col-md-5">
        <form action="Departments/" class="form-inline" role="form" method="post" id="buttonForm">

            <input type="hidden" name="id" id="userId" />
            <div class="form-group" style="margin-bottom:5px">
                @Html.ActionLink("Создать", "Create", null, new { @class = "btn btn-default form-control" })
            </div>
            <div class="form-group" style="margin-bottom:5px">
                <input value="Удалить" data-action="Delete" type="submit" class="btn btn-default form-control disabled " />
            </div>
            <div class="form-group" style="margin-bottom:5px">
                <input value="Изменить" data-action="Edit" type="submit" class="btn btn-default form-control disabled" />
            </div>
            <div class="form-group" style="margin-bottom:5px">
                <input value="Подробнее" data-action="Details" type="submit" class="btn btn-default form-control disabled" />
            </div>

        </form>
    </div>
</div>



<script src="~/Scripts/Department/DepartmentPagin.js"></script>
<script src="~/Scripts/ModifyButtons.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>