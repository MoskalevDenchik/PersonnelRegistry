@using DM.PR.Common.Enums
@model List<DM.PR.Common.Entities.Phone>

@for (int i = 0; i < Model.Count; i++)
{
    @Html.Hidden($"Phones[{i}].Id",Model[i].Id)
    @Html.TextBox($"Phones[{i}].Number", Model[i].Number, new { @class = "form-control" })
    @Html.DropDownList($"Phones[{i}].Kind", new SelectList(Enum.GetValues(typeof(KindOfPhone)), Model[i].Kind), new { @class = "form-control" })
}

