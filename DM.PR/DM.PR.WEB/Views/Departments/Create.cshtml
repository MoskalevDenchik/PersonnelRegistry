@model DM.PR.WEB.Models.DepartmentCreateViewModel


<h2 class="text-center">Добавьте новый отдел</h2> <br />


@Html.AntiForgeryToken()
@Html.ValidationSummary(true)

<div class="form-horizontal">
    <div class="form-group">
        <div class="col-md-offset-4 col-md-8">
            @Html.Action("GetParentDepartment")
            @Html.ValidationMessageFor(model => model.ParentId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-4 col-md-8">
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Название отдела..." })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-4 col-md-8">
            @Html.TextAreaFor(model => model.Address, new { @class = "form-control", placeholder = "Адрес..." })
            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-4 col-md-8">
            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", placeholder = "Описание..." })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-4 col-md-4">
            <div class="row">
                @Html.LabelFor(model => model.Phones, new { @class = "control-label col-md-4" })
            </div>
            <div class="col-md-12" id="Phones">
                @if (Model?.Phones != null)
                {
                    for (int i = 0; i < Model.Phones.Count; i++)
                    {
                        <div class="row">
                            <div class="col-md-7 Number">
                                @Html.TextBoxFor(model => model.Phones[i], null, new { @class = "form-control", placeholder = "Введите номер...." })
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="row">
                        <div class="col-md-7 Number">
                            @Html.TextBoxFor(model => model.Phones[0], null, new { @class = "form-control", placeholder = "Введите номер...." })
                        </div>
                    </div>
                }
            </div>
            <div class="col-md-12 text-center">
                <a id="AddPhone" class="btn btn-default">Добавить телефон</a>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row text-center">
            <input type="submit" id="Save" value="Сохранить" class="btn btn-default" />
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @*<script src="~/Scripts/Phones.js"></script>*@
}
