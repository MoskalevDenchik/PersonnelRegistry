@model PagedData<Employee>

@{
    Layout = null;
}

@{
    int page = Model.CurentPage;
    int pageSize = 5;
    int totalPage = (int)Math.Ceiling((decimal)Model.TotalCount / pageSize);
    int priviosPage = page <= 1 ? 1 : (page - 1);
    int nextPage = page >= totalPage ? page : (page + 1);

    string AddClass(int number)
    {
        return number == page ? "active" : "";
    }
}

@foreach (var item in Model.Data)
{
    <div class="well well-sm">
        <div class="row" id=" d">
            <div class="col-md-1">
                <a href="~/Employees/Details/@item.Id">
                    <img src="~/Content/Images/UserImg.jpg" class="img-responsive img-circle" />
                </a>
            </div>
            <div class="col-md-10">
                <div class="text-right" style="margin-top:20px; margin-right:20px">
                    <strong>@item.FirstName</strong>
                    <strong>@item.MiddleName </strong>
                    <strong>@item.LastName</strong>
                </div>
                <div class="text-right" style="margin-top:20px; margin-right:20px">
                    <strong>@item.Department.Name</strong>
                </div>
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="text-center">
        <ul class="pagination" id="paged">
            <li data-page="@priviosPage"><a href="#">&laquo;</a></li>
            @for (int i = 1; i <= totalPage; i++)
            {
                <li class="@AddClass(@i)" data-page="@i"><a href="#">@i</a></li>
            }
            <li data-page="@nextPage"><a href="#">&raquo;</a></li>
        </ul>
    </div>
</div>



