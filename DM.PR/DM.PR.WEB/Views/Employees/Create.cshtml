@model DM.PR.WEB.Models.Employee.EmployeeCreateViewModel

@{
    ViewBag.Title = "Create";
    int phoneCount = 0;
    int emailCount = 0;
}

<h2 class="text-center">Добавьте нового сотрудника</h2> <br />


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.DepartmentId, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.Action("SelectList")                                                                   
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.FirstName, new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.MiddleName, new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.MiddleName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LastName,new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Address, new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.MaritalStatusId,new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.Action("SelectMaritalStatus")
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.BeginningWork, new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.BeginningWork, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.EndWork, new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.EndWork, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Emails, new { @class = "control-label col-md-4" })
            <div class="col-md-4" id="Emails">
                @{
                    if (Model.Emails != null) { Html.RenderAction("AddEmail", new { emails = @emailCount++ }); }
                }
            </div>
            <div class="col-md-2">
                @Ajax.ActionLink("Добавить Email", "AddEmail", new { emails = @emailCount++ },
     new AjaxOptions { UpdateTargetId = "Emails", InsertionMode = InsertionMode.InsertAfter },
     new { @class = "btn btn-default" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Телефоны :", new { @class = "control-label col-md-4" })
            <div class="col-md-4" id="Phones">
                @{
                    if (Model.Phones != null) { Html.RenderAction("AddPhone", new { phones = @phoneCount++ }); }
                }
            </div>
            <div class="col-md-2">
                @Ajax.ActionLink("Добавить Телефон", "AddPhone", new { phones = @phoneCount++ },
     new AjaxOptions { UpdateTargetId = "Phones", InsertionMode = InsertionMode.InsertAfter },
     new { @class = "btn btn-default" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-5 col-md-5">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
