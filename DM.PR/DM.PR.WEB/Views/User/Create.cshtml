@model DM.PR.WEB.Models.User.UserCreateViewModel

<h2 class="text-center">Добавьте пользователя</h2>
<br />

<form action="@Url.Action("Create","User")" id="userForm">

    @Html.HiddenFor(m=>m.Id)
    @Html.HiddenFor(m=>m.EmployeeId)

    <div class="row">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-4">
                @Html.TextBoxFor(model => model.Login, new { @class = "form-control", placeholder = "Введите логин...." })
                @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-4">
                @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Введите пароль...." })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-4">
                @Html.TextBoxFor(model => model.ConfirmPassword, new { @class = "form-control", placeholder = "Подтвердите пароль...." })
                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class=" col-md-offset-2 col-md-2">
                @Html.LabelFor(model => model.Roles, new { @class = "control-label" })
            </div>
            <div class="col-md-8" id="Roles">
                @Html.Action("GetRole")
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-5">
                <a id="AddRole" class="btn btn-default">Добавить роль</a>
            </div>
        </div>
        <div class="form-group">
            <div class="row text-center">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script src="~/Scripts/User/Create.js"></script>
    <script src="~/Scripts/Roles/AddRole.js"></script>
}
