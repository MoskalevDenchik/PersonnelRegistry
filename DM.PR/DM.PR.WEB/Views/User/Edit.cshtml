@model DM.PR.WEB.Models.User.UserEditViewModel

<h2 class="text-center"> Измените пользователя</h2>
<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(Model => Model.Id)
    @Html.HiddenFor(model => model.EmployeeId)

    <div class="row">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-4">
                @Html.TextBoxFor(model => model.Login, new { @class = "form-control", placeholder = "Введите логин...." })
                @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-4">
                @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Введите пароль...." })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                @Html.ValidationMessageFor(model => model.Roles, "", new { @class = "text-danger" })
                <div class="row">
                    @Html.LabelFor(model => model.Roles, new { @class = "control-label col-md-4" })
                </div>
                <div class="col-md-12" id="Roles">
                    @for (int i = 0; i < Model.Roles.Count; i++)
                    {
                        @Html.Action("AddRole", new { selectedId = Model.Roles[i].Id, number = @i })
                    }
                </div>
                <div class="col-md-12 text-center">
                    <a id="AddRole" class="btn btn-default">Добавить роль</a>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row text-center">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="~/Scripts/Roles/AddRole.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
}

