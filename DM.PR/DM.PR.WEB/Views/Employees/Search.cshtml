
<div class="row" id="searchParams">
    <div class="col-md-2">
        <input type="text" class="form-control" name="lastName" placeholder="Фамилия..." />
    </div>
    <div class="col-md-2">
        <input type="text" class="form-control" name="firstName" placeholder="Имя..." />
    </div>
    <div class="col-md-2">
        <input type="text" class="form-control" name="middlename" placeholder="Отчество..." />
    </div>
    <div class="col-md-1">
        <input type="number" class="form-control" name="fromYear" placeholder="От..." />
    </div>
    <div class="col-md-1">
        <input type="number" class="form-control" name="toYear" placeholder="До..." />
    </div>
    <div class="col-md-2">
        @Html.Action("GetWorkStatusList", "WorkStatus")
    </div>
    <div class="col-md-1">
        <select id="pageSize" class="form-control">
            <option value="value">5</option>
            <option value="value">10</option>
            <option value="value">15</option>
        </select>
    </div>
    <div class="col-md-1">
        <input type="button" class="btn btn-danger" id="Search" value="Search" />
    </div>
</div>
<br />
<div id="EmployeesList">
</div>
<div class="row">
    <div class="text-center">
        <ul class="pagination" id="paged"></ul>
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/Search.js"></script>
}