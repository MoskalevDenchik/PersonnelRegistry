@model IReadOnlyCollection<KindPhone>
@{
    int number = ViewBag.number;
    int selectedId = 0;
    var selectedItem = Model.Where(m => m.Id == selectedId).Select(m => m.Kind);
}
<div class="row">
    <div class="col-md-7 Number">
        @Html.TextBox($"Phones[{number}].Number", null, new { @class = "form-control", placeholder = "Введите номер...." })
    </div>
    <div class="col-md-5 Kind">
        @Html.DropDownList($"Phones[{number}].Kind.Id", new SelectList(Model, "Id", "Kind", selectedItem), new { @class = "form-control " })
    </div>
</div>
