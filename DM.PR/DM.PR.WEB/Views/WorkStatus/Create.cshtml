@model DM.PR.WEB.Models.WorkStatus.WorkStatusCreateViewModel

<h2 class="text-center"> Добавтье новый статус</h2>
<br />

<form id="StatusForm">
    <div class="row">
        <div class="form-group">
            <div class="col-md-offset-4">
                @Html.TextBoxFor(model => model.Status, new { @class = "form-control", placeholder = "Введите статус...." })
                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="row text-center">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script src="~/Scripts/WorkStatus/Save.js"></script>
}
