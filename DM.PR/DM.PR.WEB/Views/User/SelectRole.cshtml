@model IReadOnlyCollection<DM.PR.Common.Entities.Account.Role>
@{
    int number = ViewBag.number;
    int selectedId = ViewBag.selectedId;
    var selectedItem = Model.Where(m => m.Id == selectedId).Select(m => m.Name);
    string selectedValue = selectedId == 0 ? "Выберите роль" : null;
}

<div class="role">
    @Html.DropDownList($"Roles[{number}].Id", new SelectList(Model, "Id", "Name", selectedItem), selectedValue, new { @class = "form-control " })
</div>
                                                          