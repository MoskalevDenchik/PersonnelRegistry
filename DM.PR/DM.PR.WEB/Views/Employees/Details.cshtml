@model EmployeeDetailsViewModel

@{
    Layout = "~/Views/Shared/_Details.cshtml";

    MvcHtmlString EndOfWork = Model.EndOfWork == null ? null
        : new MvcHtmlString($" to {Html.DisplayFor(m => m.EndOfWork).ToString()}");

}

<div class="row">
    <div class="col-md-5" style="padding:20px 35px">
        <img src=@Model.ImagePath class="img-thumbnail img-responsive" />
    </div>
    <div class="col-md-7 text-right " style="padding-top:20px">
        <div class="row">
            <div class="col-md-4  text-right">
                <span class="text-info">ФИО:</span>
            </div>
            <div class="col-md-8 text-left">
                @Model.LastName
                @Model.FirstName
                @Model.MiddleName
            </div>
        </div>
        <div class="row">
            <div class="col-md-4  text-right">
                <span class="text-info">Отдел:</span>
            </div>
            <div class="col-md-8 text-left">
                @Model.DepartmentName
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 text-right">
                <span class="text-info">Семейное положение:</span>
            </div>
            <div class="col-md-8 text-left">
                <span class="text-uppercase">@Model.MaritalStatus</span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 text-right">
                <span class="text-info">Статус:</span>
            </div>
            <div class="col-md-8 text-left">
                <span class="text-uppercase">@Model.WorkStatus</span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 text-right">
                <span class="text-info">Телеоны:</span>
            </div>
            <div class="col-md-8 text-left">
                @foreach (var item in Model.Phones)
                {
                    <p>@item.Number (@item.Kind.Kind)</p>
                }
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 text-right">
                <span class="text-info">E-mails:</span>
            </div>
            <div class="col-md-8 text-left">
                @foreach (var item in Model.Emails)
                {
                    <p>@item.Address</p>
                }
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 text-right">
                <span class="text-info">Домашний адрес:</span>
            </div>
            <div class="col-md-8 text-left">
                @Model.Address
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 text-right">
                <span class="text-info">Период работы:</span>
            </div>
            <div class="col-md-8 text-left">
                <p> с @Html.DisplayFor(m => m.BeginningOfWork)  @EndOfWork</p>
            </div>
        </div>

    </div>

    <div class="col-md-6">
    </div>
</div>

